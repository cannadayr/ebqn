{erl_opts, [debug_info]}.
{deps, []}.
{plugins, [
    { rebar3_cargo, ".*", {git, "https://github.com/rusterlium/rebar3_cargo", {branch, "master"}}}
]}.
{provider_hooks, [
    {pre, [{compile, {cargo, build}}]},
    {post, [
        {clean, {cargo, clean}},
        {eunit, {cargo, test}}
    ]}
]}.
